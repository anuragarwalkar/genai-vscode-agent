{
  "name": "avior",
  "displayName": "Avior - GenAI Coding Agent",
  "description": "An AI coding agent that integrates with multiple LLM models using LangChain for autonomous code editing",
  "version": "0.0.1",
  "publisher": "anuragarwalkar",
  "author": {
    "name": "Anurag Arwalkar"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/anuragarwalkar/genai-vscode-agent.git"
  },
  "bugs": {
    "url": "https://github.com/anuragarwalkar/genai-vscode-agent/issues"
  },
  "homepage": "https://github.com/anuragarwalkar/genai-vscode-agent#readme",
  "keywords": [
    "ai",
    "assistant",
    "coding",
    "langchain",
    "llm",
    "agent",
    "automation"
  ],
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other",
    "Machine Learning",
    "Snippets"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "ai-agent.helloWorld",
        "title": "Hello World"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "ai-agent-container",
          "title": "Avior",
          "icon": "$(robot)"
        }
      ]
    },
    "views": {
      "ai-agent-container": [
        {
          "type": "webview",
          "id": "avior.webview",
          "name": "",
          "when": "true",
          "icon": "$(robot)",
          "visibility": "visible"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.74.0",
    "@typescript-eslint/eslint-plugin": "^8.39.0",
    "@typescript-eslint/parser": "^8.39.0",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "esbuild": "^0.25.8",
    "eslint": "^9.32.0",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.9.2"
  },
  "dependencies": {
    "@langchain/anthropic": "^0.3.26",
    "@langchain/openai": "^0.6.7"
  }
}

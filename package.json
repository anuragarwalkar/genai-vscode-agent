{
  "name": "avior",
  "displayName": "Avior - GenAI Coding Agent",
  "description": "An AI coding agent that integrates with multiple LLM models using LangChain for autonomous code editing",
  "version": "0.0.1",
  "publisher": "anuragarwalkar",
  "author": {
    "name": "Anurag Arwalkar"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/anuragarwalkar/genai-vscode-agent.git"
  },
  "bugs": {
    "url": "https://github.com/anuragarwalkar/genai-vscode-agent/issues"
  },
  "homepage": "https://github.com/anuragarwalkar/genai-vscode-agent#readme",
  "keywords": [
    "ai",
    "assistant",
    "coding",
    "langchain",
    "llm",
    "agent",
    "automation"
  ],
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other",
    "Machine Learning",
    "Snippets"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "avior.configure",
        "title": "Configure LLM Provider",
        "category": "Avior",
        "icon": "$(settings-gear)"
      },
      {
        "command": "avior.selectProvider",
        "title": "Select LLM Provider",
        "category": "Avior",
        "icon": "$(symbol-namespace)"
      },
      {
        "command": "avior.viewConfig",
        "title": "View Current Configuration",
        "category": "Avior",
        "icon": "$(eye)"
      },
      {
        "command": "avior.askAgent",
        "title": "Ask AI Agent",
        "category": "Avior",
        "icon": "$(comment-discussion)"
      },
      {
        "command": "avior.initLangChain",
        "title": "Initialize LangChain Agent",
        "category": "Avior",
        "icon": "$(tools)"
      }
    ],
    "keybindings": [
      {
        "command": "avior.askAgent",
        "key": "cmd+shift+a",
        "mac": "cmd+shift+a",
        "when": "editorTextFocus"
      },
      {
        "command": "avior.configure",
        "key": "cmd+shift+c",
        "mac": "cmd+shift+c"
      }
    ],
    "menus": {
      "commandPalette": [
        {
          "command": "avior.configure"
        },
        {
          "command": "avior.selectProvider"
        },
        {
          "command": "avior.viewConfig"
        },
        {
          "command": "avior.askAgent"
        },
        {
          "command": "avior.initLangChain"
        }
      ],
      "editor/context": [
        {
          "command": "avior.askAgent",
          "group": "avior",
          "when": "editorTextFocus"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "ai-agent-container",
          "title": "Avior",
          "icon": "$(robot)"
        }
      ]
    },
    "views": {
      "ai-agent-container": [
        {
          "type": "webview",
          "id": "avior.webview",
          "name": "",
          "when": "true",
          "icon": "$(robot)",
          "visibility": "visible"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test",
    "package-extension": "vsce package",
    "publish": "vsce publish",
    "publish-minor": "vsce publish minor",
    "publish-major": "vsce publish major"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.74.0",
    "@typescript-eslint/eslint-plugin": "^8.39.0",
    "@typescript-eslint/parser": "^8.39.0",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "esbuild": "^0.25.8",
    "eslint": "^9.32.0",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.9.2"
  },
  "dependencies": {
    "@langchain/anthropic": "^0.3.26",
    "@langchain/community": "^0.3.51",
    "@langchain/core": "^0.3.0",
    "@langchain/google-genai": "^0.1.12",
    "@langchain/openai": "^0.6.7",
    "langchain": "^0.3.30",
    "zod": "^3.22.0"
  }
}
